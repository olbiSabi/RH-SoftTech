# ============================================
# HR_ONIAN - Variables Docker (Developpement)
# ============================================
# Ce fichier est utilise par docker-compose.yml.
# Pour la production, copier ce fichier et adapter les valeurs.

# ---- Django ----
SECRET_KEY=docker-dev-key-insecure-change-in-production-2026
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ---- PostgreSQL (Django) ----
DB_NAME=hrapp
DB_USER=hr
DB_PASSWORD=hr_docker_2026
DB_HOST=db
DB_PORT=5432

# ---- PostgreSQL (conteneur postgres) ----
POSTGRES_DB=hrapp
POSTGRES_USER=hr
POSTGRES_PASSWORD=hr_docker_2026

# ---- URL du site ----
SITE_URL=http://localhost:8000

# ---- Gunicorn ----
GUNICORN_BIND=0.0.0.0:8000

# ---- Donnees par defaut (premier lancement) ----

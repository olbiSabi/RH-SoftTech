# ============================================
# HR_ONIAN - Variables d'environnement
# ============================================
# Copier ce fichier en .env.local et adapter les valeurs.
#
# Developpement : DEBUG=True, SECRET_KEY dev, ALLOWED_HOSTS=localhost
# Production    : DEBUG=False, SECRET_KEY securisee, ALLOWED_HOSTS=domaine

# ---- Django ----
SECRET_KEY=GENERER_UNE_CLE_SECRETE_ICI
DEBUG=False
ALLOWED_HOSTS=votre-domaine.com,www.votre-domaine.com

# ---- Base de donnees PostgreSQL ----
DB_NAME=hrapp
DB_USER=hr
DB_PASSWORD=CHANGER_CE_MOT_DE_PASSE
DB_HOST=localhost
DB_PORT=5432

# ---- Email SMTP ----
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=votre-email@gmail.com
EMAIL_HOST_PASSWORD=votre-mot-de-passe-applicatif
DEFAULT_FROM_EMAIL=ONIAN-EasyM <noreply@onian-easym.com>

# ---- URL du site ----
SITE_URL=https://votre-domaine.com

# ---- Redis (cache & sessions) ----
# Laisser vide en développement si Redis n'est pas installé (fallback sur cache mémoire)
# En production : redis://localhost:6379/0  ou  redis://redis:6379/0  (Docker)
REDIS_URL=redis://127.0.0.1:6379/0

# ---- Sentry (monitoring des erreurs) ----
# Créer un projet sur https://sentry.io, copier le DSN ci-dessous.
# Laisser vide pour désactiver (aucun impact si absent).
SENTRY_DSN=
# Taux d'échantillonnage des transactions (0.0 = aucune, 1.0 = toutes)
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
# Version déployée (affichée dans le tableau de bord Sentry)
APP_VERSION=hr-onian@1.0.0
